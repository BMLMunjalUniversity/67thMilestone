<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk"
    android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Disclaimer"
        android:textColor="#ffffff"
        android:fontFamily="serif"
        android:textSize="34dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"


        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:clickable="true"

        card_view:cardCornerRadius="8dp"
        android:padding="30dp"
        android:layout_height="wrap_content"

        card_view:cardBackgroundColor="#ffffff"
        card_view:contentPadding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="@string/disc1"
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="4dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="In case the ID card is lost, the student will not be allowed to participate in the events till he/she gets a new id card."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="4dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="If the ID card is lost, he/she needs to pay Rs 150 for getting a new Id Card."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="4dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="Accommodation Fee is not included in the registration fee. If the student wants to avail accommodation, he/she needs to pay for the accommodation."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="4dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="Prize Money for different events subject to change."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
            <View
                android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_margin="4dp"
            />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="The cancellation of the event will be on the discretion of the event organizer."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="4dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="A minimum number of participants are required for the event to be valid for prize money."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="4dp"
                />
            <com.bluejamesbond.text.DocumentView xmlns:ext="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                ext:documentView_antialias="true"
                ext:documentView_cacheConfig="auto_quality"
                ext:documentView_hyphen="-"
                ext:documentView_lineHeightMultiplier="1.5"
                ext:documentView_maxLines="100"
                ext:documentView_insetPadding="10dp"
                ext:documentView_insetPaddingBottom="10dp"
                ext:documentView_insetPaddingLeft="10dp"
                ext:documentView_insetPaddingRight="10dp"
                ext:documentView_insetPaddingTop="10dp"
                ext:documentView_reverse="false"
                ext:documentView_text="Although, prizes worth will be awarded to winners in case the participation is less than the required number."
                ext:documentView_textAlignment="justified"
                ext:documentView_textColor="@android:color/darker_gray"
                ext:documentView_textFormat="plain"
                ext:documentView_textSize="17dp"
                ext:documentView_textSubPixel="true"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>