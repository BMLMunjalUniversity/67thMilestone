<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">



<LinearLayout
    android:id="@+id/activity_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.devesh.maps.MainActivity">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="0.333"
       android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/atm"
        app:cardCornerRadius="50dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:clickable="true"
        android:onClick="atm"
        android:layout_weight="0.5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                 android:src="@drawable/atm"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATMs"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#111111"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp"
            android:layout_width="match_parent"
            android:id="@+id/mall"
            android:layout_height="155dp"
            android:clickable="true"
            android:onClick="mall"
            android:layout_weight="0.5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/shop"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shopping"

                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="#111111"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="0.333"
       android:weightSum="1">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="50dp"
        android:layout_width="match_parent"
        android:id="@+id/hotel"
        android:layout_height="155dp"
        android:clickable="true"
        android:onClick="hotel"
        android:layout_weight="0.5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/hotel"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotels"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#111111"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="50dp"
        android:layout_width="match_parent"
        android:id="@+id/hospital"
        android:layout_height="155dp"
        android:clickable="true"
        android:onClick="hospital"
        android:layout_weight="0.5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/hosp"
                android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#111111"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.333"
        android:weightSum="1">
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="50dp"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:id="@+id/cinema"
        android:clickable="true"
        android:onClick="cinema"
        android:layout_weight="0.5"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/cinema"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cinema"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#111111"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="50dp"

            android:layout_width="match_parent"
            android:id="@+id/Restaurant"
            android:layout_margin="5dp"
            android:layout_height="155dp"
            android:clickable="true"
            
            android:layout_weight="0.5"
            android:onClick="restaurant"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:src="@drawable/restaurant"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restauraunt"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textColor="#111111"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>



</LinearLayout>
</ScrollView>